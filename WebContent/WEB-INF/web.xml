<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>CalorieApp</display-name>
	<welcome-file-list>
		<welcome-file>login</welcome-file>
	</welcome-file-list>

	<!-- SERVLETS -->

	<servlet>
		<servlet-name>upload</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.Upload</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.Index</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/index/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>identify</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.Identify</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>identify</servlet-name>
		<url-pattern>/identify/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>test</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.Test</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>test</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.AdminLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.Admin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.AdminLogout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>images</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.AdminImages</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>images</servlet-name>
		<url-pattern>/images</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>nutrition_info</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.NutritionInfo</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>nutrition_info</servlet-name>
		<url-pattern>/nutrition_info/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>error</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.Error</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>error</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>log</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.AdminLog</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>log</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	<!-- LOGGING -->

	<servlet>
		<servlet-name>log_init</servlet-name>
		<servlet-class>com.wks.calorieapp.controllers.LogInit</servlet-class>
		<init-param>
			<param-name>local_log4j_properties_uri</param-name>
			<param-value>WEB-INF/local_log4j.properties</param-value>
		</init-param>
		<init-param>
			<param-name>web_log4j_properties</param-name>
			<param-value>WEB-INF/web_log4j.properties</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- CONTEXT -->

	<context-param>
		<param-name>resources_dir</param-name>
		<param-value>calorie_app/</param-value>
	</context-param>
	<context-param>
		<param-name>images_dir</param-name>
		<param-value>images/</param-value>
	</context-param>
	<context-param>
		<param-name>indexes_dir</param-name>
		<param-value>indexes/</param-value>
	</context-param>
	<context-param>
		<param-name>log_dir</param-name>
		<param-value>log/</param-value>
	</context-param>
	<context-param>
		<param-name>log_file</param-name>
		<param-value>log2.txt</param-value>
	</context-param>
	<context-param>
		<param-name>default_max_hits</param-name>
		<param-value>10</param-value>
	</context-param>

	<context-param>
		<param-name>is_deployed</param-name>
		<param-value>false</param-value>
	</context-param>

	<!-- API KEYS -->
	<context-param>
		<param-name>consumer_key</param-name>
		<param-value>ea0d6a946b3e4b3a8d5cbdb0a55900dd</param-value>
	</context-param>
	<context-param>
		<param-name>consumer_secret</param-name>
		<param-value>49704a68e7114143925f6390aeca8b42</param-value>
	</context-param>


	<!-- UNHANDLED EXCEPTION REDIRECT -->

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error</location>
	</error-page>

</web-app>